{% set _minimal_navbar = true %}
{% extends 'layout' %}
{% block content %}

    <div class="c-banner">
        <div class="c-banner__content">
            <div class="c-banner__content__icon"></div>
            <h1 class="c-banner__content__title">Nathaniel Charles</h1>
            <p class="c-banner__content__subtitle">Web Developer</p>
        </div>
    </div>

    <ul class="o-grid">
        {% for project in projects %}
            <li class="o-grid__item">
                <a href="{{ route('portfolio.show', 'foobar') }}">
                    <div class="o-project-block">
                        <div class="o-project-block__image"
                             style="background-image: url(/assets/images/{{ project.image }})">
                        </div>
                        <h3 class="o-project-block__title">{{ project.title }}</h3>
                        <p class="o-project-block__subtitle">{{ project.type }}</p>
                    </div>
                </a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}
